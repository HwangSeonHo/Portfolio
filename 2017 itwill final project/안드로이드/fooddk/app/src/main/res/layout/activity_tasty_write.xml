<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/writeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIV"
                android:layout_width="225dp"
                android:layout_height="203dp" />

            <Button
                android:id="@+id/imgB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickImageB"
                android:text="사진업로드" />
        </LinearLayout>

        <EditText
            android:id="@+id/insert_titleET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="이름" />

        <EditText
            android:id="@+id/insert_phoneET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="7.44"
            android:gravity="left|center_vertical"
            android:hint="번호"
            android:inputType="phone" />

        <EditText
            android:id="@+id/insert_timeET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="13.12"
            android:gravity="left|center_vertical"
            android:hint="영업시간" />

        <EditText
            android:id="@+id/insert_addressET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="23.81"
            android:hint="주소" />

        <RadioGroup
            android:id="@+id/insert_cno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/insert_cno1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="한식" />

            <RadioButton
                android:id="@+id/insert_cno2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="양식" />

            <RadioButton
                android:id="@+id/insert_cno3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="중식" />

            <RadioButton
                android:id="@+id/insert_cno4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기타" />
        </RadioGroup>

        <EditText
            android:id="@+id/insert_contentET"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="49.34"
            android:hint="내용" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickCancelB"
                android:text="취소" />

            <Button
                android:id="@+id/clickWriteB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickWriteB"
                android:text="등록" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>