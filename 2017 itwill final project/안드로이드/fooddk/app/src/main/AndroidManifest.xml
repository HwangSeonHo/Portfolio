<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fooddk">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fooddk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TastyMainActivity" />
        <activity android:name=".TastyWriteActivity" />
        <activity android:name=".TastyModifyActivity" />
        <activity android:name=".RecipeModifyActivity" />
        <activity android:name=".RecipeMainActivity" />
        <activity android:name=".RecipeWriteActivity" />
        <activity android:name=".RecipeViewActivity" />
        <activity android:name=".HoogiMainActivity" />
        <activity android:name=".HoogiWriteActivity" />
        <activity android:name=".HoogiViewActivity" />
        <activity android:name=".HoogiUpdateActivity"></activity>
    </application>

</manifest>